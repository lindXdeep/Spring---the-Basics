<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="
        http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


    <import resource="loggers.xml" />

    <bean id="client" class="com.lindx.example.beans.Client">
        <constructor-arg index="0" value="1"/> 
        <constructor-arg value="Jonh Smith"/>
        <property name="greeting" value="Hello there!"/>
    </bean>

    <bean id="event" class="com.lindx.example.beans.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date" />
        </constructor-arg>
        <constructor-arg ref="dateFormet" />
    </bean>

    <bean id="dateFormet" class="java.text.DateFormat" factory-method="getDateTimeInstance" />

    <bean id="app" class="com.lindx.example.App">
        <constructor-arg ref="client" />
        <constructor-arg ref="cacheFileEventLogger" />
        <constructor-arg>
            <map>
                <entry key="INFO" value-ref="consoleEventLogger" />
                <entry key="ERROR" value-ref="combinedEventLogger" />
            </map>
        </constructor-arg>
    </bean>
</beans>
