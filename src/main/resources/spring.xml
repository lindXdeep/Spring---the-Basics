<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="
        http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.lindx.example.beans.Client">
        <constructor-arg name="id" value="1" />
        <constructor-arg name="fullname" value="Jonh Smith" />
    </bean>

    <bean id="event" class="com.lindx.example.beans.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date" />
        </constructor-arg>
        <constructor-arg ref="dateFormet" />
    </bean>

    <bean id="eventLogger" class="com.lindx.example.loggers.ConsoleEventLogger" />

    <bean id="dateFormet" 
            class="java.text.DateFormat" 
                factory-method="getDateTimeInstance" />
    
    <bean id="fileEventLogger" 
                class="com.lindx.example.loggers.FileEvenLogger" 
                    init-method="init">
        <constructor-arg value="log/events_log.txt" />
    </bean>

    <bean id="cacheFileEventLogger" 
            class="com.lindx.example.loggers.CacheFileEventLogger"
                destroy-method="destroy">
        <constructor-arg value="log/events_log.txt" />
        <constructor-arg value="5" />
    </bean>

    <bean id="app" class="com.lindx.example.App">
        <constructor-arg ref="client" />
        <constructor-arg ref="eventLogger" />
    </bean>
</beans>
