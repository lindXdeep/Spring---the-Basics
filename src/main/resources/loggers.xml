<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="consoleEventLogger" class="com.lindx.example.loggers.ConsoleEventLogger" />

    <bean id="fileEventLogger" 
            class="com.lindx.example.loggers.FileEvenLogger" 
                init-method="init">
        <constructor-arg value="log/events_log.txt" />
    </bean>
  
    <bean id="cacheFileEventLogger" 
            class="com.lindx.example.loggers.CacheFileEventLogger" 
                destroy-method="destroy" 
                    parent="fileEventLogger">
        <constructor-arg index="1" value="5" />
    </bean>

    <bean id="combinedEventLogger" class="com.lindx.example.loggers.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>

</beans>